<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nex"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/slide_screen_image"
        android:layout_width="match_parent"
        android:layout_height="300sp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingHorizontal="10sp"
        app:lottie_rawRes="@raw/board1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Start Learning now! aldmdl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slide_screen_image"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="10sp"
        android:minLines="5"
        android:maxLines="5"
        android:gravity="center"
        android:textAlignment="textStart"
        tools:text="select your academic year and department then Browse Courses and Books Specified for you from your faculty"
        app:layout_constraintEnd_toEndOf="@id/title"
        android:textSize="14sp"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/poppins"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:id="@+id/indLay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/desc">


        <ImageView
            android:id="@+id/ind1"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/selected" />

        <ImageView
            android:id="@+id/ind2"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/unselected" />

        <ImageView
            android:id="@+id/ind3"
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:src="@drawable/unselected" />

    </LinearLayout>













</androidx.constraintlayout.widget.ConstraintLayout>
