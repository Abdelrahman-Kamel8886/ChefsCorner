<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="button_style">
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:backgroundTint">@color/mainColor</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="reg_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColorHint">@color/slateGray</item>
        <item name="android:inputType">text</item>
    </style>



    <style name="CardViewShadowTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:shadowColor">#000000</item>
    </style>





    <!-- Rounded Corners -->
    <style name="CardViewRoundedCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomCalendarView">
        <item name="android:dateTextAppearance">@style/CustomDateText</item>
        <item name="android:weekDayTextAppearance">@style/CustomWeekDayText</item>
    </style>

    <style name="CustomDateText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF0000</item> <!-- Change text color -->
    </style>

    <style name="CustomWeekDayText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00FF00</item> <!-- Change week day color -->
    </style>


</resources>