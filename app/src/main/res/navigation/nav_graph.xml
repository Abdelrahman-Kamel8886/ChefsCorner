<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.abdok.chefscorner.Ui.Splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.abdok.chefscorner.Ui.Auth.Login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_regiesterFragment"
            app:destination="@id/regiesterFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.abdok.chefscorner.Ui.Home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/regiesterFragment"
        android:name="com.abdok.chefscorner.Ui.Auth.SignUp.RegiesterFragment"
        android:label="fragment_regiester"
        tools:layout="@layout/fragment_regiester" >
        <action
            android:id="@+id/action_regiesterFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>